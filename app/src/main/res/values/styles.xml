<resources>

    <!-- Application theme. -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_out</item>
    </style>

    <style name="lib_base_dialog_trans" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="lib_base_checkVersion_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="divider_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_d1d1d1</item>
    </style>

    <style name="base_head_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/base_normal_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
