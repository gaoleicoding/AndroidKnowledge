<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="MatrixBaseActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_distortion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="MatrixDistortionActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_color_matrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="ColorMatrixActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_color_hue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="ColorHueActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_color_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="ColorFilterActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_slim_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="SlimFaceActivity"
        android:textAllCaps="false" />

</LinearLayout>
