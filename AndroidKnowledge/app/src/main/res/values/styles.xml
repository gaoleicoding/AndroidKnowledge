<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TitleTextSize">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="CustomTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="customViewStyle">@style/custom_view_style</item>
        <item name="attr5">attr5 from AppTheme</item>
        <item name="attr6">attr6 from AppTheme</item>
    </style>

    <style name="text_style">
        <item name="android:text">text from style</item>
    </style>

    <style name="default_view_style">
        <item name="attr4">attr4 from default_view_style</item>
        <item name="attr5">attr5 from default_view_style</item>
    </style>

    <style name="custom_view_style">
        <item name="attr3">attr3 from custom_view_style</item>
        <item name="attr4">attr4 from custom_view_style</item>
    </style>

    <style name="xml_style">
        <item name="attr2">attr2 from xml_style</item>
        <item name="attr3">attr3 from xml_style</item>
    </style>

    <style name="progressBar_custom_drawable" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@mipmap/ecgnc_icon_chat_sending</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="EcgChatUiChatMessageTimeTipStyle">
        <!--<item name="android:singleLine">true</item>-->
        <item name="android:background">@drawable/ecg_chatui_chat_message_time_tip_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/ecg_chatui_chat_message_system_tip_margintop</item>
        <item name="android:paddingBottom">@dimen/ecg_chatui_chat_message_system_tip_margintop
        </item>
        <item name="android:paddingLeft">@dimen/ecg_chatui_chat_message_time_tip_padding</item>
        <item name="android:paddingRight">@dimen/ecg_chatui_chat_message_time_tip_padding</item>
        <item name="android:textSize">@dimen/ecg_chatui_chat_message_time_tip_text_size</item>
        <item name="android:textColor">@color/ecg_chatui_chat_message_time_tip_background</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EcgChatUiChatMessageSendContentStyle">
        <item name="android:textSize">@dimen/ecg_chatui_chat_message_content_text_size</item>
        <item name="android:textColor">@color/ecg_chatui_chat_message_send_text_color</item>
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">
            @dimen/ecg_chatui_chat_item_message_line_spacing_multiplier
        </item>
    </style>

    <style name="EcgChatUiChatMessageReceiveContentStyle">
        <item name="android:textSize">@dimen/ecg_chatui_chat_message_content_text_size</item>
        <item name="android:textColor">@color/ecg_chatui_chat_message_receive_text_color</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">
            @dimen/ecg_chatui_chat_item_message_line_spacing_multiplier
        </item>
    </style>
</resources>
