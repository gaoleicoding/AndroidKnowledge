<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ecg_chatui_avater_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ecg_chatui_avater_king"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/ecgnc_icon_king_head_icon"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/ecg_chatui_avater_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ecg_chatui_avatar_paddingTop">

        <ImageView
            android:id="@+id/ecg_chatui_avater_bg"
            android:layout_width="@dimen/ecg_chatui_avater_container_size"
            android:layout_height="@dimen/ecg_chatui_avater_container_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ecgnc_background_avatar"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ecg_chatui_avater_privilege"
            android:layout_width="@dimen/ecg_chatui_avater_container_size"
            android:layout_height="@dimen/ecg_chatui_avater_container_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ecg_chatui_avater"
            android:layout_width="@dimen/ecg_chatui_avater_container_size"
            android:layout_height="@dimen/ecg_chatui_avater_container_size"
            android:layout_gravity="center"
            android:padding="@dimen/ecg_chatui_avater_container_size_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/ecgnc_icon_g044"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ecg_chatui_avater_frame"
            android:layout_width="@dimen/ecg_chatui_avater_frame_size"
            android:layout_height="@dimen/ecg_chatui_avater_container_size"
            android:layout_gravity="center"
            android:paddingTop="@dimen/ecg_chatui_avater_frame_padding_top"
            android:scaleType="centerCrop"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>